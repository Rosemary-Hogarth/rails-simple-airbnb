<button class="btn btn-primary mb-3"><%= link_to "Add a flat", new_flat_path %></button>
<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our flats</h1>
    </div>
  </div>

  <div class="row d-flex flex-wrap">
    <% if @flats.any? %>
      <% @flats.each do |flat| %>
        <div class="col-md-4 mb-4 d-flex align-items-stretch">
          <div class="card shadow-sm p-3 mb-5 bg-white rounded">
            <div class="card-img-top" style="background-image: url('https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200'); height: 200px; background-size: cover;"></div>
            <div class="card-body  d-flex flex-column">
              <h5 class="card-title"><%= flat.name %></h5>
              <p class="card-text"><%= flat.address %></p>
              <div class="d-flex justify-content-start mb-3">
              <p class="mb-0 mr-3"><i class="fa-solid fa-people-line"></i><%= flat.number_of_guests %></p>
              <p class="mb-0"><i class="fa-solid fa-euro-sign"></i><%= flat.price_per_night %></p>
              </div>
                <div class="d-flex justify-content-start">
                  <%= link_to "More info", flat_path(flat), class: "btn btn-primary btn-sm me-2" %>
                  <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-warning btn-sm me-2" %>
                  <%= link_to "Remove", flats_path(flat), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm"  %>
                </div>
              </div>
            </div>
        </div>
      <% end %>
    <% else %>
      <p>No flats available.</p>
    <% end %>
  </div>

</div>
